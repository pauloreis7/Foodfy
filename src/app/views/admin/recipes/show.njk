{% extends 'admin/layout_admin.njk' %}

{% block title %} <title>{{ recipe.title }} - Foodfy</title> {% endblock title %}

{% set page_redirect = "recipes" %}
{% set modal_text = "Essa receita não existe!" %}

{% block content %}

    <div class="admin_header">
    
        <h1>Receita: {{ recipe.title }}</h1>
    
        <a href="/recipes/{{ recipe.id }}/edit" class="edit_create">Editar receita</a>
    
    </div>

    <article class="details_header">
    
        <div class="gallery">

            <div class="highlight">

                {% if not files[0] %}

                    <img src="http://placehold.it/500x500?text=Receita sem foto" />

                {% else %}

                    <img src="{{ files[0].src }}" alt="{{ files[0].name }}" />

                {% endif %}


            </div>

            <div class="gallery-preview">

                {% for image in files %}

                    <img 
                     src="{{ image.src }}"
                     alt="{{ image.name }}"

                        {% if loop.index0 == 0 %}
                        
                            class="active"

                        {% endif %}

                    />

                {% endfor %}

            </div>

        </div>

        <div class="details_chef">
        
            <h1>{{ recipe.title }}</h1>

            <p>por {{ recipe.chef_name }}</p>
        
        </div>
    
    </article>

    <article class="details_content">

        <article class="detail_make">
        
            <div class="make_title">
            
                <h1>Ingredientes</h1>
            
            </div>

            <div class="make">
            
                <ul>

                    {% for ingredient in recipe.ingredients %}
                        <li>{{ ingredient }}</li>
                    {% endfor %}

                </ul>
            
            </div>
        
        </article>

        <article class="detail_make">
        
            <div class="make_title">
            
                <h1>Modo de preparo</h1>
            
            </div>

            <div class="make">
            
                <ul>

                    {% for step in recipe.preparation %}
                        <li>{{ step }}</li>
                    {% endfor %}

                </ul>
            
            </div>
        
        </article>

        <article class="add_info">
        
            <div class="make_title">
            
                <h1>Informações adicionais</h1>
            
            </div>

            <div class="make">
            
                <p>{{ recipe.information }}</p>
            
            </div>
        
        </article>
    
    </article>

{% endblock %}

{% block modal %}
    
    {% if err %}

        {% include 'admin/modal.njk' %}

    {% endif %}

{% endblock %}