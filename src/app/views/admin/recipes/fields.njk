<article class="field_item">
    
    <h2>Imagem da receita</h2>

    {# <input name="image" value="{{ recipe.image }}" placeholder="http://" /> #}

</article>

<div class="create_header">

    <article class="field_item">
        
        <h2>Chef</h2>

        <select name="chef_id">

            <option value="">Selecione o Chef</option>
        
        {% for chef in options %}

            <option value="{{ chef.id }}" {% if  chef.id == recipe.chef_id %} selected {% endif %}>
            {{ chef.name }}</option>

        {% endfor %}
        
        </select>

    </article>
    
    <article class="field_item">
        
        <h2>Título da receita</h2>

        <input name="title" value="{{ recipe.title }}" />

    </article>

</div>

<article class="field_item">

    <div id="ingredients">

        <h2>Ingredientes</h2>

        <div class="ingredient">

            <input name="ingredients[]" value="{{ recipe.ingredients }}"  placeholder="Ingrediente" />

        </div>
    
    </div>

    <button type="button" class="buttons_ingredient">Adicionar novo ingrediente</button>

</article>

<article class="field_item">

    <div id="steps">

        <h2>Modo de preparo</h2>

        <div class="step">
            <input name="preparation[]" value="{{ recipe.preparation }}"  placeholder="Passo" />
        </div>
    
    </div>

    <button type="button" class="buttons_make">Adicionar novo passo</button>

</article>

<article class="field_item">

    <h2>Informações adicionais</h2>

    <textarea name="information" cols="30" rows="10">{{ recipe.information }}</textarea>

</article>