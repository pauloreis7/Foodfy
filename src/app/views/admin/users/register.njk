{% extends 'admin/layout_admin.njk' %}

{% block title %} <title>{{ user.name }}</title> {% endblock %}

{% block content %}

    <div class="form_header users_header">

        <h1>Criar Usu√°rio</h1>

        <div class="form_action_buttons">

            <button type="submit" form="users_form" class="submit_button">Salvar</button>

            <a href="/admin/users" class="submit_button">Cancelar</a>

        </div>

    </div>

    <section class="users_form_container">

        <form action="/admin/profile" method="POST" id="users_form">
        
            <fieldset class="fields">

                <div class="create_header">

                    {% include 'admin/users/fields.njk' %}

                    <div class="field_item admin_field">
                
                        <input type="checkbox" name="is_admin" id="admin_create" />

                        <label for="admin_create">Administrador</label>

                    </div>
                                
                    <input type="hidden" name="id" value={{ user.id }}>

                </div>
                

            </fieldset>
                
        </form>

    </section>

{% endblock %}