<article class="field_item">
    
    <h2>Nome</h2>

    <input name="name" value="{{ chef.name }}" placeholder="Nome e Sobrenome" />

</article>

<article class="field_item">
    
    <h2>Avatar</h2>

    {% if avatar %}

        <input placeholder="{{ avatar.name }}" readonly/>

    {% endif %}
    
    <div id="chefs_photos_upload">
       
        <input type="file" id="chefs_photos_input" name="photo" accept="image/*" />

        <p>Enviar Avatar</p>

    </div>

</article>