{% extends "users/layout_users.njk" %}

    {% block title %}<title>Home Foodfy</title>{% endblock %}

    {% block content %}

        <section id="container">
            
            <article id="container_content">
                
                <h1>As melhores receitas</h1>

                    <p>Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro</p>

            </article>
            
            <article id="container_img">

                <img src="assets/chef.png" alt="Chef">

            </article>

        </section>

        <div id="popular">
            <h2>Mais acessadas</h2>
        </div>

        <section class="recipes">

            {% for recipe in recipesPop %}

                <article class="recipe">

                    <div class="recipe_img" style="background: url({{ recipe.recipe_url }}172x80) no-repeat center center / cover"></div>

                    <div class="recipe_desc">

                        <h3>{{recipe.title}}</h3>

                        <p>por {{recipe.author}}</p>

                    </div>

                </article>

            {% endfor %}

        </section>

{% endblock %}