{% extends "users/layout_users.njk" %}

{% block title %}<title>{{ recipe.title }} - Foodfy</title>{% endblock %}

{% block content %}
    <section class="details">

        <article class="details_header">

            <div class="gallery">

                <div class="highlight">

                    {% if not files[0] %}

                        <img src="http://placehold.it/950x950?text=Receita sem foto" onclick="LightBox.open()" />

                    {% else %}

                        <img src="{{ files[0].src }}" alt="{{ files[0].name }}" onclick="LightBox.open()" />

                    {% endif %}

                    <article class="lightbox-target">

                        <img src="{{ files[0].src }}" alt="files[0].name" />

                        <a href="#"
                        
                            class="lightbox-close"
                            onclick="LightBox.close()"
                        
                            >
                            <i class="material-icons">close</i>
                        </a>

                    </article>

                </div>

                <div class="gallery-preview">

                    {% for image in files %}


                        <img

                         src="{{ image.src }}"
                         alt="{{ image.name }}"

                            {% if loop.index0 == 0 %}

                                class="active"

                            {% endif %}

                            onclick="imageGallery.setImage(event)"

                        />

                    {% endfor %}

                </div>

            </div>

        </article>

        <article class="detail_desc">

            <h1>{{recipe.title}}</h1>
            <p>{{recipe.chef_name}}</p>

        </article>

        <article class="detail_make">
        
            <div class="make_title">
            
                <h1>Ingredientes</h1><p class="hide">ESCONDER</p>
            
            </div>

            <div class="make">
            
                <ul>

                    {% for ingredient in recipe.ingredients %}
                
                        <li> {{ingredient}} </li>

                    {% endfor %}

                </ul>
            
            </div>
        
        </article>

        <article class="detail_make">
        
            <div class="make_title">
            
                <h1>Modo de preparo</h1><p class="hide">ESCONDER</p>
            
            </div>

            <div class="make">
            
                <ul>

                    {% for step in recipe.preparation %}
        
                        <li> {{step}} </li>

                    {% endfor %}

                </ul>
            
            </div>
        
        </article>

        <article class="detail_make">
        
            <div class="make_title">
            
                <h1>Informações adicionais</h1><p class="hide">ESCONDER</p>
            
            </div>

            <div class="make">
            
                <p>{{recipe.information}}</p>
            
            </div>
        
        </article>

    </section>

{% endblock %}