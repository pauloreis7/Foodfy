<article class="field_item">
        
    <h2>Email</h2>

    <input type="email" name="email" value="{{ email }}" placeholder="Digite seu email" />

</article>

<article class="field_item">
        
    <h2>Nova Senha</h2>

    <input type="password" name="password" placeholder="Digite sua nova senha" />

</article>

<article class="field_item">
        
    <h2>Repetir Senha</h2>

    <input type="password" name="password_repeat" placeholder="Repita a nova senha" />

</article>

<input type="hidden" name="token" value={{ token }} />