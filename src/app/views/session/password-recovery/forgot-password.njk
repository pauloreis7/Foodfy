{% extends 'session/layout_session.njk' %}

{% block title %} <title>Foodfy - Recuperar senha</title> {% endblock %}

{% block content %}

    <form action="/forgot-password" method="POST">
    
        <div class="session_title">

            <h1>Esqueceu a Senha?</h1>

        </div>

        <article class="session_fields">

            <article class="field_item">
        
                <h2>Email</h2>

                <input type="email" name="email" value="{{ user.email }}" placeholder="Digite seu email para recuperar sua senha" />

            </article>


        </article>

        <div class="session_form_footer forgot_password">

            <button type="submit" class="submit_button">Recuperar</button>

        </div>
    
    </form>

{% endblock %}