{% extends 'chefs/layout_chefs.njk' %}

{% block title %} <title>Create - Foodfy</title> {% endblock %}

{% block header %}

    <h1>Criando receita</h1>

    <form action="/admin" method="post">

    <button type="submit">Salvar receita</button>
    
{% endblock %}   

{% block content %}


        <article class="field_item">
        
            <h2>Imagem da receita</h2>

            <input name="recipe_url" value="" />
        
        </article>

        <article class="field_item">
        
            <h2>Ingredientes</h2>

            <input name="recipe_ingredents" value="" />

            <button type="button" class="buttons">Adicionar novo ingrediente</button>
        
        </article>

        <article class="field_item">
        
            <h2>Modo de preparo</h2>

            <input name="recipe_making" value="" />
        
            <button type="button" class="buttons">Adicionar novo passo</button>

        </article>

        <article class="field_item">
        
            <h2>Informações adicionais</h2>

            <textarea name="recipe_specs" cols="30" rows="10" value="" ></textarea>
        
        </article>

    </form>

{% endblock %}