{% extends 'chefs/layout_chefs.njk' %}

{% block title %} <title>Editar receita</title> {% endblock %}

{% block content %}

    <h1>Editando receita</h1>

    <form action="/admin?_method=delete" id="delete" method="post">
    
        <input type="hidden" name="index" value="{{ recipeIndex }}">

        <button type="submit" id="delete_button">Deletar</button>
    
    </form>

    <form action="/admin?_method=put" method="post">

    <input type="hidden" name="index" value="{{ recipeIndex }}">

    <button type="submit">Salvar receita</button>

    {% include 'chefs/fields.njk' %}

    {% include 'chefs/add_item.njk' %}

    <script>
    
        //Delete verify
        const formDelete = document.querySelector("#delete")

        formDelete.addEventListener("submit", function (event) {
            const comfirm = confirm("Deseja mesmo apagar essa receita?")

            if (!comfirm) {
                event.preventDefault()
            }
        })
    
    </script>

{% endblock %}

