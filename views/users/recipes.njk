{% extends "users/layout_users.njk" %}

    {% block title %}<title>Receitas Foodfy</title>{% endblock %}

{% block content %}

        <section class="recipes_just">

            {% for recipe in recipes %}
            

                <article class="recipe" id="{{recipe.title}}">

                    <div class="recipe_img" style="background: url({{ recipe.recipe_url }}172x80) no-repeat center center / cover"></div>

                    <div class="recipe_desc">

                        <h3>{{recipe.title}}</h3>

                        <p>por {{recipe.author}}</p>

                    </div>

                </article>

            {% endfor %}
            
        </section>

{% endblock %}